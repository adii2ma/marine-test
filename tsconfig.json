{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // ðŸ”„ Changed from "bundler" to "node" for better Next.js compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // âœ… Ensures correct resolution for imports
    "paths": {
      "@/*": [
        "./app/*"
      ] // âœ… Explicitly set to `app/` since Next.js uses App Router
    },
    "forceConsistentCasingInFileNames": true // âœ… Prevents casing issues in imports
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/**/*.tsx", // âœ… Explicitly include `app/` directory
    "pages/**/*.tsx",
    "components/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
